{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "nodenext",
    "target": "es6",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "lib": ["es2019", "dom"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "docs"
  ]
}
